<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.dreamliner.rvhelper.sample">

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activity.main.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.customloading.CustomLoadingActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.customempty.CustomEmptyActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.customheader.CustomHeaderActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.customfooter.CustomFooterActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.defaultall.DefaultAllActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.customall.CustomAllActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.addressbook.AddressbookActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.gridloadmore.GridLoadMoreActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".ui.activity.databind.DataBindActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".ui.activity.banner.BannerActivity"
            android:theme="@style/AppTheme"
            />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0"
            tools:replace="android:value"
            />
    </application>

</manifest>
